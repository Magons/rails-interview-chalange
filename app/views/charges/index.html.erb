<p id="notice"><%= notice %></p>

<h1>Failed Charges</h1>
<table id="failed_table" class="table table-hover">
  <thead>
    <tr>
      <th>S.No</th>
      <th>Amount</th>
      <th>Currency</th>
      <th>Paid</th>
      <th>Refunded</th>
      <th>Name</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody  style="color: #fff">
    <% @failed_charges.each_with_index do |charge, index| %>
      <tr class="failed_tr" style="background-color: #FF0000">
        <td><%= index+1 %></td>
        <td><%= charge.amount %></td>
        <td><%= charge.currency %></td>
        <td><%= charge.paid %></td>
        <td><%= charge.refunded %></td>
        <td><%= charge.customer.first_name+ " " + charge.customer.last_name %></td>
        <td><%= link_to 'Show', charge %></td>
        <td><%= link_to 'Edit', edit_charge_path(charge) %></td>
        <td><%= link_to 'Destroy', charge, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

